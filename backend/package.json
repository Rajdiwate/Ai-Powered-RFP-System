{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "cross-env NODE_ENV=production node ./dist/server.js",
    "dev": "cross-env NODE_ENV=development nodemon --exec tsx ./server.ts",
    "format": "prettier --write \"**/*.ts\"",
    "lint": "eslint ./src/**/*.ts",
    "lint:fix": "eslint ./src/**/*.ts --fix",
    "db:generate": "cross-env NODE_ENV=development drizzle-kit generate",
    "db:migrate": "cross-env NODE_ENV=development drizzle-kit migrate",
    "db:custom:generate": "cross-env NODE_ENV=development drizzle-kit generate --custom",
    "db:drop": "cross-env NODE_ENV=development drizzle-kit drop",
    "db:studio": "cross-env NODE_ENV=development drizzle-kit studio",
    "db:seed": "cross-env NODE_ENV=development tsx ./src/db/seed/main.seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@google/genai": "^1.31.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.0",
    "express": "^5.2.1",
    "express-http-context": "^2.0.1",
    "imapflow": "^1.1.1",
    "jsonwebtoken": "^9.0.3",
    "mailparser": "^3.9.0",
    "nodemailer": "^7.0.11",
    "pg": "^8.16.3",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "uuid": "^13.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mailparser": "^3.4.6",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "drizzle-kit": "^0.31.8",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4"
  }
}
